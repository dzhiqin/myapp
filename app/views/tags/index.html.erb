<div class="tag-index-page">
  <% if @tags.present? %>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>标签</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>
        <% @tags.each do |tag|%>
          <tr>
            <td><%= tag.name %></td>
            <td>
              <%= link_to '删除', tag_path(tag), method: :delete%>
            </td>
          </tr>
        <%end%>
      </tbody>
    </table>
  <% end %>
  <%= link_to '新增标签', new_tag_path, class: 'btn btn-primary'%>
</div>
